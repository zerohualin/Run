<module name="zerg">

	<enum name="GroundType" comment="牌的类型">
		<var name="None" alias="无要求" />
		<var name="Empty" alias="空地" />
		<var name="Barrier" alias="障碍" />
		<var name="Mineral" alias="矿物" />
	</enum>

	<enum name="CardType" comment="牌的类型">
		<var name="Building" alias="建筑" comment=""/>
		<var name="Skill" alias="技能" comment=""/>
		<var name="Module" alias="召唤牌" comment=""/>
	</enum>

	<enum name="BuildingType" comment="建筑类型">
		<var name="Building" alias="建筑" comment=""/>
	</enum>

	<bean name="AreaSize">
        <var name="x" type="int"/>
        <var name="y" type="int"/>
    </bean>

	<bean name="BluePrintConfig" comment="蓝图">
		<var name="id" type="string"/>
		<var name="name" type="string"/>
		<var name="type" type="BuildingType"/>
		<var name="level" type="int"/>
		<var name="rare" type="int"/>
		<var name="cost" type="int"/>
		<var name="linkBuilding" type="string"/>
	</bean>

	<bean name="BuildingConfig" comment="建筑">
		<var name="id" type="string"/>
		<var name="name" type="string"/>
		<var name="type" type="BuildingType"/>
		<var name="size" type="AreaSize"/>
		<var name="field" type="AreaSize"/>
		<var name="hp" type="int"/>
		<var name="invadeFix" type="float"/>
		<var name="lvModules" type="map,int,string"/>
		<var name="maxLevel" type="int"/>
		<var name="maxSlot" type="int"/>
		<var name="requireGroundType" type="GroundType"/>
	</bean>

	<table name="TbBluePrint" value="BluePrintConfig" input="zerg/blueprint.xlsx" comment="蓝图表"/>
	<table name="TbBuilding" value="BuildingConfig" input="zerg/building.xlsx" comment="建筑表"/>
</module>